<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Top Toolbar -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="8dp"
            android:tint="#605E5C"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload Notes PDF"
            android:textColor="#323130"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/btnHelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_help"
            android:padding="8dp"
            android:tint="#0078D4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topToolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Your Notes"
                android:textColor="#323130"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a PDF file containing your notes"
                android:textColor="#605E5C"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <!-- Upload Area -->
            <androidx.cardview.widget.CardView
                android:id="@+id/uploadCard"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@drawable/edit_field_bg">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_menu_upload"
                        android:tint="#0078D4"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to select PDF file"
                        android:textColor="#0078D4"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or drag and drop here"
                        android:textColor="#605E5C"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supported: PDF files only"
                        android:textColor="#A19F9D"
                        android:textSize="11sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Selected File Section (Hidden by default) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/selectedFileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- File Icon and Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@android:drawable/ic_menu_report_image"
                            android:tint="#D32F2F"
                            android:padding="12dp"
                            android:background="@drawable/icon_circle_bg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvSelectedFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="document.pdf"
                                android:textColor="#323130"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="middle" />

                            <TextView
                                android:id="@+id/tvSelectedFileSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5 MB"
                                android:textColor="#605E5C"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnRemoveFile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:tint="#D32F2F"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true" />
                    </LinearLayout>

                    <!-- File Details -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1DFDD"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Type"
                                android:textColor="#A19F9D"
                                android:textSize="11sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PDF Document"
                                android:textColor="#323130"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="#A19F9D"
                                android:textSize="11sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvFileStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“ Ready to upload"
                                android:textColor="#107C10"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Note Title Input -->

            <!-- Note Description Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description (Optional)"
                app:boxStrokeColor="#0078D4"
                app:hintTextColor="#0078D4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="24dp"/>

            <!-- Category Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp"/>

            <!-- Upload Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadPdf"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Upload PDF Note"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                app:backgroundTint="#0078D4"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                android:layout_marginBottom="16dp" />

            <!-- Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF4E5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="#F57C00"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Only PDF files are supported. Maximum file size: 10 MB"
                        android:textColor="#605E5C"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>