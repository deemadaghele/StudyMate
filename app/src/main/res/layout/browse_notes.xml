            <androidx.cardview.widget.CardView android:id="@+id/cardNote1" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="16dp" app:cardElevation="4dp" android:layout_marginBottom="16dp" android:clickable="true" app:cardBackgroundColor="#FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
